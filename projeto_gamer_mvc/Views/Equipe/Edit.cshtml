@model Equipe

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/equipes.css">

<h2>Edição de Equipes</h2>

@if (ViewBag.UserName == null)
{
    <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
}
else
{
    <main>

        <section class="conteiner-grid cadastro-equipes">
            <form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data" class="frm-cad-equipe">
                <div class="cadequipe-titulo">
                    <h1>Edit de Equipes</h1>
                    <hr>
                </div>

                @* <input class="campo-entrada" type="number" id="idEquipe" placeholder="Digite o Id da sua equipe:"> *@
                <input type="hidden" name="IdEquipe" value="@ViewBag.Equipe.IdEquipe">

                <input class="campo-entrada" name="Nome" type="text" value="@ViewBag.Equipe.Nome"
                    placeholder="Digite o nome da sua equipe:" required>
                <label class="foto" for="foto-file">
                    Nenhuma imagem selecionada...
                    <input type="file" name="Imagem" value="@ViewBag.Equipe.Imagem" id="foto-file">
                </label>

                <button>Atualizar</button>
            </form>
        </section>
    </main>


}